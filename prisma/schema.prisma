generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int        @id @default(autoincrement())
  name        String
  stock       Int        @default(0)
  price       Float
  description String?
  imageUrl    String?
  cartItems   CartItem[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  Category    Category?  @relation(fields: [categoryId], references: [id])
  categoryId  Int?
}


model Cart {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  userId    Int
  cartItems CartItem[]
  User      User[]
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  username String
  role String @default("user")
  carts Cart[] 
}

model CartItem {
  id        Int     @id @default(autoincrement())
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  cart      Cart    @relation(fields: [cartId], references: [id])
  cartId    Int

  @@unique([cartId, productId]) 
}
model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

